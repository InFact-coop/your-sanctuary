{
  "extends": ["esnext", "plugin:react/recommended", "prettier"],
  "plugins": ["babel", "react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0,
    "react/react-in-jsx-scope": 0,
    "no-invalid-this": 0,
    "babel/no-invalid-this": 1,
    "no-use-before-define": ["error", { "variables": false }],
    "class-methods-use-this": 0
  }
}
