<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex">

    <title>Action for Children</title>
    <link href="https://fonts.googleapis.com/css?family=Rubik:400,500" rel="stylesheet">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

  <body>

      <div class="w-100 bg-blue">
        <div class="flex center mw8 justify-center">
          <p class="white alert-banner f6-ns f7 tc" style="line-height: 1.6;">
            This is a trial service. We'd appreciate your <a target="_blank" class="white" href="https://www.actionforchildren.org.uk/support-for-parents/talk-service-feedback/">feedback</a>. It will take less than 5 minutes.
          </p>
        </div>
      </div>

      <div class="mw8 center flex justify-between items-center">
        <div class="mh2 mh4-ns pv5-ns pv4" style="width: 350px">
          <a href="<%= page_path(@conn, :index) %>">
            <img src="/images/afc-logo.png" class="w-100 db">
          </a>
        </div>
          <%= unless (@conn.assigns[:user] || @conn.request_path == "/talk-to-us") do %>
            <a href="/talk-to-us" class="db white bg-dark-red mh4-ns mh2 f3-ns f5 fw4 pv2 ph3 br2 hover-bg-red t3 all ease no-underline tc">Speak to us</a>
          <% end %>
      </div>

      <main role="main">
        <%= render @view_module, @view_template, assigns %>
      </main>

    <div class="w-100 bg-blue flex justify-center">
      <div class="flex flex-column ph3 pv4 pa4-ns mw8">
        <div class="w-70-ns tc tl-ns">
          <h4 class="white fw4 tracked lh-copy mt0 mt3-ns">This service is available Monday-Friday 2pm-8pm.</h4>
          <h4 class="white fw4 tracked lh-copy">Contact your local council if you are worried about a child's welfare. Contact 111 if you are worried about your child's health, or 999 in a medical emergency.</h4>
          <%= if @conn.assigns[:user] do %>
            <div class="logout-form">
                <p class="white">You are logged in as <strong><%= @conn.assigns.user.email %></strong> â€“ </p>
                <%= link "Logout", to: session_path(@conn, :delete), class: "white" %>
                <br /><br />
            </div>
          <% end %>
          <%= link to: page_path(@conn, :privacy), class: "white" do %>
            Privacy Policy
          <% end %>
        </div>
      </div>
    </div>

    <!-- intercom  -->
    <script>
      (function(){var w=window;var ic=w.Intercom;if(typeof ic==="function"){ic('reattach_activator');ic('update',intercomSettings);}else{var d=document;var i=function(){i.c(arguments)};i.q=[];i.c=function(args){i.q.push(args)};w.Intercom=i;function l(){var s=d.createElement('script');s.type='text/javascript';s.async=true;
      s.src='https://widget.intercom.io/widget/{app_id}';
      var x=d.getElementsByTagName('script')[0];x.parentNode.insertBefore(s,x);}if(w.attachEvent){w.attachEvent('onload',l);}else{w.addEventListener('load',l,false);}}})()
    </script>

    <!-- google analytics  -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-100560015-1', 'auto');
      ga('send', 'pageview');
    </script>

    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
